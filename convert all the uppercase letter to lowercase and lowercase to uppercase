
import java.util.*;
class HelloWorld {
    public static void main(String[] args) {
        
        // convert all the uppercase letter to lowercase and lowercase to uppercase
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the input string:");
        String s=sc.nextLine();
        String str="";
        for(int i=0;i<s.length();i++){
            int a=s.charAt(i);
            String st=s.charAt(i)+"";
            if(a==32){
                str=str+" ";
            }
            else if(a>=65 &&  a<=90){
                str=str+st.toLowerCase();
            }else{
                str=str+st.toUpperCase();
            }
        }
        System.out.println(str);
        
       
    }
}
